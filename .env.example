# Database
DATABASE_URL="postgresql://username:password@localhost:5432/scripelle_db?schema=public"

# JWT Secrets
JWT_SECRET="your-super-secure-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Client URL
CLIENT_URL="http://localhost:3000"

# Email Configuration (Gmail App Password)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="Scripelle <your-email@gmail.com>"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Server
PORT=5000
NODE_ENV="development"